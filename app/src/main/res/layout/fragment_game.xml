<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".activities.GameFragment">


    <TextView
        android:id="@+id/txt_score"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/game_question"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_archipel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="36"
        android:adjustViewBounds="true"
        android:background="@color/blue_light"
        android:contentDescription="@string/img_island_content_description"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/img_island"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="40"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:contentDescription="@string/img_island_content_description"
        android:scaleType="centerInside" />

    <GridLayout
        android:id="@+id/grid_responses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/btn_haut_gauche"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:background="@drawable/action_button_blue"
            android:textColor="@color/colorAccent"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeStepGranularity="2sp" />

        <Button
            android:id="@+id/btn_haut_droit"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:background="@drawable/action_button_blue"
            android:textColor="@color/colorAccent"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeStepGranularity="2sp" />

        <Button
            android:id="@+id/btn_bas_gauche"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:background="@drawable/action_button_blue"
            android:textColor="@color/colorAccent"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeStepGranularity="2sp" />

        <Button
            android:id="@+id/btn_bas_droit"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="2sp"
            android:background="@drawable/action_button_blue"
            android:textColor="@color/colorAccent"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="28sp"
            android:autoSizeStepGranularity="2sp" />
    </GridLayout>

</LinearLayout>